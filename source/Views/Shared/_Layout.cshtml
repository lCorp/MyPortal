<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MyPortal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>MyPortal</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogInPartial")
            </div>
        </header>
        <nav>
            @Html.Partial("_NavigationPartial")
        </nav>
        <section id="main">
            <h1>@ViewBag.Title</h1>
            @RenderBody()
        </section>
        <footer>
            Copyright since 2013 &copy; MyPortal. All right reserved.
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
