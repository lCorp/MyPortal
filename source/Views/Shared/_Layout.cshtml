<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MyPortal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>MyPortal</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </header>
        <nav>
            <ul id="menu" class="metro-list">
                <li>@Html.ActionLink("Homepage", "Access", "Module")</li>
                <li>@Html.ActionLink("Services", "Access", "Module")</li>
                <li>@Html.ActionLink("Article", "Access", "Module")</li>
                <li>@Html.ActionLink("Contact", "Access", "Module")</li>
            </ul>
        </nav>
        <section id="main">
        <h2>@ViewBag.Title</h2>
            @RenderSection("featured", required: false)
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
