<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@MyPortal.Utils.Configuration.WebsiteName | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>@MyPortal.Utils.Configuration.WebsiteName</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogInPartial")
            </div>
        </header>
        <nav>
            @Html.Partial("_NavigationPartial")
        </nav>
        <section id="main">
            <h2>@ViewBag.Title</h2>
            @RenderBody()
        </section>
        <footer>
            <copyright>
                @String.Format(@Resources.Views.Shared.Layout.CopyRight, MyPortal.Utils.Configuration.CopyrightYear, MyPortal.Utils.Configuration.WebsiteName) 
            </copyright>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
