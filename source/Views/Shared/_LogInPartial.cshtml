[ <a href="#">United States - English</a> ] 
@if (Request.IsAuthenticated)
{
    <text>Hello @Html.ActionLink(User.Identity.Name, "Manage", "Account")! </text>
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logOutForm", style = "display:inline;" }))
    {
        @Html.AntiForgeryToken()
        <text>[ <a href="javascript:document.getElementById('logOutForm').submit()">Logout</a> ]</text>
    }
}
else
{
    <text>[ @Html.ActionLink("Login", "Login", "Account") ]
    [ @Html.ActionLink("Register", "Register", "Account") ]</text>
}