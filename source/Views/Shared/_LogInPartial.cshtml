@if (Request.IsAuthenticated)
{
    <b>Hello @Html.ActionLink(User.Identity.Name, "Manage", "Account")!</b>
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logOutForm", style = "display:inline;" }))
    {
        @Html.AntiForgeryToken()
        <text>[ <a href="javascript:document.getElementById('logOutForm').submit()">Logout</a> ]</text>
    }
}
else
{
    <i>[ @Html.ActionLink("Login", "Login", "Account") ]
    [ @Html.ActionLink("Register", "Register", "Account") ]</i>
}