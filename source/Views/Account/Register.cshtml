@model MyPortal.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<section id="registerForm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.LabelFor(m => m.UserName, new { Class = "editor-label" })
        @Html.TextBoxFor(m => m.UserName, new { Class = "editor-field" })
        <text>&nbsp;</text>@Html.ValidationMessageFor(m => m.UserName)

        @Html.LabelFor(m => m.Password, new { Class = "editor-label" })
        @Html.PasswordFor(m => m.Password, new { Class = "editor-field" })
        <text>&nbsp;</text>@Html.ValidationMessageFor(m => m.Password)

        @Html.LabelFor(m => m.ConfirmPassword, new { Class = "editor-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { Class = "editor-field" })
        <text>&nbsp;</text>@Html.ValidationMessageFor(m => m.ConfirmPassword)

        <input class="editor-field clear" type="submit" value="Register" />

        <label>@Html.ActionLink(Resources.Views.Account.Login.Title, "Login") @Resources.Views.Account.Login.RecommendRegister</label>
    }
</section>
@section Right{
    @Html.Action("ExternalLoginsSuggestionList")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
