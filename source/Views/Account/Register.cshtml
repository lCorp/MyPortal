@model MyPortal.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<section id="registerForm">
    @using (Html.BeginForm())
    {
        <p>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
        </p>
        <p>
            @Html.LabelFor(m => m.UserName, new { Class = "editor-label" })
            @Html.TextBoxFor(m => m.UserName, new { Class = "editor-field" })
            @Html.ValidationMessageFor(m => m.UserName)
            @Html.LabelFor(m => m.Password, new { Class = "editor-label" })
            @Html.PasswordFor(m => m.Password, new { Class = "editor-field" })
            @Html.ValidationMessageFor(m => m.Password)
            @Html.LabelFor(m => m.ConfirmPassword, new { Class = "editor-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { Class = "editor-field" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </p>
        <p>
            <input type="submit" value="Register" />
        </p>
        <p>
            @Html.ActionLink(Resources.Views.Account.Login.Title, "Login") @Resources.Views.Account.Login.RecommendRegister
        </p>
    }
</section>
@section Right{
    <div id="sidebar">
        <section class="blocks">
            <a href="#" class="block_one">
                <h3>Login by Facebook</h3>
            </a>
            <a href="#" class="block_two">
                <h3>Login by Google</h3>
            </a>
        </section>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
